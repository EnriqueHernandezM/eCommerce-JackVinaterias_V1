<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="bg-dark text-white">
    <%- include('../partials/navbar'); %>
    <div class="container-fluid mt-5" id="renderPostProducts"></div>
    <div class="container-fluid mt-5" id="formuToActulisedOneItem"></div>
    <div class="container m-auto">
      <div class="row logoVerCarrito">
        <ul>
          <li><a href="/perfil/login#contenidoCarrito">Ver carrito 🛒</a></li>
          <li><button onclick="renderPostNewProducto()">Agregar productos</button></li>
        </ul>
      </div>
      <h2 class="p-5 text-center">productos disponibles</h2>

      <div id="probandoAct">
        <div id="renderCantItems"></div>
        <%allItems.forEach((el) => { %>
        <div class="mt-5 pt-2">
          <img src="<%=el.image%>" alt="imagen de un producto en carrioto" />
          <p><%=el.product%></p>
          <p>$:<%=el.price%></p>
          <span onclick="renderCantItemsF('<%=el._id||el.id%>')"> agregar al 🛒 </span>
          <span onclick="deleteElement('<%=el._id||el.id%>')">borrar 🗑️ </span>
          <% const x = JSON.stringify(el)%>
          <span onclick="renderFormActProduct('<%=x%>')"> Actualizar item 🔃</span>
        </div>
        <%})%>
      </div>
    </div>
    <div class="container m-auto">
      <div class="row">
        <h3 class="fs-1 mt-5 p-5 text-center">CHAT</h3>
        <h5 class="fs-4 text-center">Ingresa tu comentario para ver todos</h5>
        <div class="d-flex container justify-content-between my-5">
          <h4>Tamaño de mensajes normalizados: <span id="normalizados"></span></h4>
          <h4>Tamaño de mensajes desnormalizados: <span id="desnormalizados"></span></h4>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <form onsubmit="enviarMsg();return false;">
            <input class="m-1" id="inputMsg" required="true" placeholder="mensaje" />
            <input class="m-1" id="alias" required="true" placeholder="Elije un alias" />
            <input class="bEnv" type="submit" value="Enviar" />
          </form>
        </div>
      </div>
    </div>
    <div class="container m-auto mb-5">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-4">
          <div id="boxMsges"></div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer'); %> //
  </body>
</html>

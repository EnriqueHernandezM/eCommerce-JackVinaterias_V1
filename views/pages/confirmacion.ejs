<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class=" text-white">
    <%- include('../partials/navbar'); %>
    <div class="container-fluid">
      <div class="row mb-5 p-5">
        <div class="col-lg-12">
          <h2 class="text-center mt-5 mb-5">GRACIAS POR TU COMPRA RECIBIRAS UN MENSAJE DE CONFIRMACION</h2>
          <h3 class="ms-5 ps-5 p-4">total a pagar $ <%=aPagar%></h3>
          <h3 class="p-2 mb-5 text-center">Lista de productos comprados</h3>
        </div>
        <%itemsBuy.forEach((el) => { %>
        <div class="d-flex align-items-center p-1">
          <div class="col-xs-12 col-md-6 col-lg-2 mt-1 text-center">
            <img class="img-fluid w-25" src="<%=el.image%>" alt="imagen de un producto en carrioto" />
          </div>
          <div class="col-xs-12 col-md-6 col-lg-2 mt-1 text-center">
            <p><%=el.product%></p>
          </div>
          <div class="col-xs-12 col-md-6 col-lg-2 mt-1 text-center">
            <p>$:<%=el.price%></p>
          </div>
          <div class="col-xs-12 col-md-6 col-lg-2 mt-1 text-center">
            <p>cantidad: <%=el.cantidad%></p>
          </div>
        </div>
        <%})%>
      </div>
    </div>
    <%- include('../partials/footer'); %>
  </body>
</html>
